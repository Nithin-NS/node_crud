<!-- include header -->
    <%- include(`include/_header`) %>
<!-- include header -->

<!-- main -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex-justify-between" style="margin-bottom: 24px;">
            <a href="/add-user" class="border-shadow">
                <span class="text-gradient">New User <i class="fa fa-user" aria-hidden="true"></i></span>
            </a>
        </div>
    </div>
    <!-- form -->
    <form action="/" method="POST">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>@Email</th>
                    <th>Gender</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <!-- include table data -->
                <%- include(`include/_show`) %>
                <!-- include table data -->
            </tbody>
        </table>
    </form>
    <!-- form -->
</main>
<!-- endmain -->

<!-- include footer -->
    <%- include(`include/_footer`) %>
